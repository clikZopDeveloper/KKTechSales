<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
      <!--  lead id, source, plumber, architect, client, lead date-->
    </data>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5dip"
    app:cardElevation="@dimen/_5dip"
    app:cardBackgroundColor="@color/vlight_primar_color"
    android:layout_margin="@dimen/_4dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5dip"
        android:padding="@dimen/_4dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lead ID : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tvID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/ivUpdate"
                android:layout_width="@dimen/_30dip"
                android:layout_height="@dimen/_30dip"
                android:src="@drawable/ic_baseline_edit_note_24"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tvSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plumber : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tvPlumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Architect : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tvArchitect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tvClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEP : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tvmep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tvLeadDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:layout_weight="1"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/ivEditLead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_round_shape_white"
                android:backgroundTint="@color/colorPrimary"
                android:text="Lead Edit"
                android:textColor="@color/white"
                android:padding="@dimen/_4dip"
                android:layout_marginStart="@dimen/_5dip" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>

</layout>